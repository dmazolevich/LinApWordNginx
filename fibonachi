echo -n "Write the number: "
read i
fibon() {
    local i=$1
    if (( i < 0 )); then
        echo "Error: negative number" >&2
        exit 1

    elif (( i <= 1 )); then
        echo $i

    else
        echo $(( $(fibon $((i - 1)) ) + $(fibon $((i - 2)) ) ))
    fi
}

fib_count() {
    local i
    for (( i = 1; i <= $1; i++ )); do
        fibon $i
    done
}

fibon $i
